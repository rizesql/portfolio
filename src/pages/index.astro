---
import { Project } from "./_index/project";
import { WorkCard } from "./_index/work-card";

import { Section, Separator, subgrid, vstack } from "~/components/ui";
import MainLayout from "~/layouts/main.astro";
import { appInfo } from "~/lib/app-info";
import { cx } from "~/lib/cx";
---

<MainLayout class="[--invert-nav:100]">
	<Section.First
		header={{ title: appInfo.title, subtitle: "Fullstack developer" }}
		links={appInfo.social}
	/>

	<Section.Root class="mt-32">
		<Section.Header>
			<h2>Hi there!</h2>
		</Section.Header>

		<Section.SideContent>
			<h1 class="text-5xl">
				I'm Åžtefan, also known as @rizesql, a Bucharest-based technologist and internet
				enjoyer
			</h1>
		</Section.SideContent>

		<div class="col-span-full overflow-hidden lg:h-screen">
			<img src="/hero.png" alt="" />
		</div>

		<div class="col-span-full lg:col-[2/span_9]">
			<p class="text-balance text-4xl">
				I am a freshman at the University of Bucharest in the department of Computer
				Science. Currently, I focus on developing my skills in fullstack development, and
				I strive to create awesome and performant experiences in this area. My work is
				constantly evolving and I remain updated to the current state of the art.
			</p>
		</div>
	</Section.Root>

	<Section.Root>
		<Section.Header>
			<h2>My work</h2>
		</Section.Header>

		<Section.SideContent class={cx(vstack(), "gap-8 font-normal text-2xl text-balance")}>
			<h2>
