		<div class={cx(subgrid(), "min-h-screen gap-x-8 gap-y-8")}>
			<Project
				name="Clockworks"
				href="/projects/clockworks"
				color="#0C0C0E"
				class="col-span-8 row-span-2"
			/>

			<Project
				name="Hronica Magazine"
				href="/projects/hronica"
				color="#E0EED7"
				class="col-span-4"
			/>

			<Project
				name="CRFT Stack"
				href="/projects/crft-stack"
				color="#18181A"
				class="col-span-4"
			/>

			<Project
				name="Jimbro"
				href="/projects/jimbro"
				color="#292927"
				class="col-span-4 row-span-2"
			/>
			<Project
				name="AERGO"
				href="/projects/aergo"
				color="#EB4D4B"
				class="col-span-8 row-span-2"
			/>
		</div>
	</Section.Root>

	<footer>footer</footer>
</MainLayout>
