					name="Upriver Technologies"
					period={{ start: new Date("2021-12"), end: new Date("2023-06") }}
					subtitle="Created web and native apps for several startups"
				/>
				<WorkCard
					name="Upriver Technologies"
					period={2023}
					subtitle="Created web and native apps for several startups"
				/>
			</div>
		</div>
