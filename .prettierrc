{
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "semi": true,
  "printWidth": 90,
  "trailingComma": "all",
  "useTabs": true,
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": [".*", "*.json", "*.md", "*.toml", "*.yml"],
      "options": {
        "useTabs": false,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "plugins": ["prettier-plugin-astro"]
      }
    }
  ]
}
